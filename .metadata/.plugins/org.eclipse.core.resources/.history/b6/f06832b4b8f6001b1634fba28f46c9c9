package br.com.stefanini.projetobd.persistence;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

public class Dao {

	Connection con; // Acesso ao database
	PreparedStatement stmt; // Acesso a tabelas (crud)
	ResultSet rs; // Consulta

	// Abrir e fecha o banco de dados

	public void open() throws Exception {
		Class.forName("com.msql.jdbc.Driver");
		con = DriverManager.
				getConnection("jdbc:mysql://localhost:3306/bdUm", "root", "admin123");
	}
	
	public void close() throws Exception{
		con.close();
	}

}
