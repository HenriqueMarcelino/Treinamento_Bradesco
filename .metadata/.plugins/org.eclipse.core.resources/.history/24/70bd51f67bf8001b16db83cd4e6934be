create database bdUm;
use bdUm;

	create table usuario(idUsuario int primary key auto_increment, 
		nome varchar (50), email varchar (100) unique);

	create table transacao(idtransacao int primary key auto_increment,
		saldo double(50), deposito double(50), saque double(50)
		id_usuario int unique, 
		foreign key(id_usuario) references usuario(idUsuario)
		on delete cascade
		); 
		
		desc usuario;
		desc transacao;
		
		show tables;
		
		set @chave=10;
		insert into usuario values(@chave,'Joao','joao@gmail.com');
		insert into transacao value(null,'saque');
		
		select * from usuario;
		select * from endereco;
		
		select u.nome, u.mail, e.bairro, e.cidade from usuario u, endereco e
		where u idUsuario = e.id_usuario;
		
	delete from usuario where idUsuario=10;
		